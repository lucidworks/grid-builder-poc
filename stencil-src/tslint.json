{
  "extends": ["tslint:latest", "tslint-react", "tslint-config-prettier", "tslint-sonarts"],

  "rules": {
    "interface-name": [true, "never-prefix"],
    "member-access": false,
    "no-null-keyword": false,
    "no-console": false,
    "no-floating-promises": false,
    "object-literal-sort-keys": false,
    "jsx-key": false,
    "jsx-no-bind": false,
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "jsx-wrap-multiline": false,
    "variable-name": [true, "allow-leading-underscore", "allow-pascal-case"],
    "no-implicit-dependencies": [true, "dev"],

    "no-this-assignment": [
      true,
      {
        "allow-destructuring": true
      }
    ],

    "no-submodule-imports": [
      true,
      "@stencil/core/dist/declarations",
      "@stencil/core/testing",
      "@stencil/core/mock-doc",
      "@stencil/core/dist/testing/puppeteer/puppeteer-declarations"
    ]
  }
}
